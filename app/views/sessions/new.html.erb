<h1>Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>
    <div class="col-sm-4">
     [ <%= link_to 'Cancel', root_path %> ]
    </div>